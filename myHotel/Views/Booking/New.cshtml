@model myHotel.Models.Booking

@{
    ViewBag.Title = "New";
}

@{
    
    var Roomid = TempData["rid"];
    var Custid = Session["UserID"];
}

<h2>New</h2>
@using (Html.BeginForm("Save", "Booking"))
{
    <div class="form-group">
        @Html.LabelFor(b=>b.CheckIn)
        @Html.EditorFor(b=>b.CheckIn, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(b=>b.CheckIn)
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.CheckOut)
        @Html.EditorFor(b => b.CheckOut, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(b => b.CheckIn)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(b => b.RoomId)
        
        @Html.TextBoxFor(b=>b.RoomId, new { @readonly = "readonly" ,@Value=Roomid , @class = "form-control" })

    </div>

  
    <div class="form-group">
        @Html.LabelFor(b=>b.CustomerId)
        @Html.TextBoxFor(b => b.CustomerId, new { @readonly = "readonly", @Value = Custid , @class = "form-control" })        


    </div>



      



        <button type="submit" class="btn btn-primary">Save</button>

}



