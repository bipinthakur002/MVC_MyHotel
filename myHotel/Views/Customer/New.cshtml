@model myHotel.Models.Customer




<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/scripts/bootbox.min.js"></script>

<h2>New</h2>
@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Name, "", new { @style = "color:red" })

    </div>

    if (Session["UserID"] == null)
    {

     <div class="form-group">
        @Html.LabelFor(c => c.Email)
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Email, "", new { @style = "color:red" })

    </div>
    }

    else
    {
        

            <div class="form-group">
                @Html.LabelFor(c => c.Email)
                @Html.TextBoxFor(c => c.Email, new { @readonly = "readonly", @Value = Model.Email, @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Email, "", new { @style = "color:red" })

            </div>
        
    }

    if (Session["UserID"] == null)
    {
    <div class="form-group">
        @Html.LabelFor(c => c.Password)
        @Html.PasswordFor(c => c.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Password, "", new { @style = "color:red" })

    </div>
     }
      else 
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Password)
            @Html.PasswordFor(c => c.Password, new { @readonly = "readonly", @Value =Model.Password  ,@class = "form-control" })
            @Html.ValidationMessageFor(c => c.Password, "", new { @style = "color:red" })

        </div>
    }



    <div class="form-group">
        @Html.LabelFor(c => c.Address)
        @Html.TextBoxFor(c => c.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Address, "", new { @style = "color:red" })

    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Mobile)
        @Html.TextBoxFor(c => c.Mobile, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Mobile, "", new { @style = "color:red" })

    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Adhar)
        @Html.TextBoxFor(c => c.Adhar, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Adhar, "", new { @style = "color:red" })

    </div>

    @Html.HiddenFor(m => m.Id)



    <button type="submit" class="btn btn-primary" >Register</button>

}

@{
    var state = TempData["rid"];
}
@if (state != null)
{
    <script type="text/javascript">
            window.onload = function () {
               bootbox.alert("You Have Successfully Registered!!! ");
            };
    </script>
}

