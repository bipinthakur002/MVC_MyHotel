@model IEnumerable<myHotel.Models.Room>

@{
    ViewBag.Title = "Detail";
}

<h2>Rooms</h2>

<table id="customer" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Room Id</th>
            <th>Capacity</th>
            <th>Price</th>
            <th>TotalRooms</th>
            <th>Available</th>
            <th>RoomType</th>
            @if (Session["UserName"] != null && Session["UserName"].ToString() != "Admin")
            {
                <th>Book</th>
            }
            @if (Session["UserName"] != null && Session["UserName"].ToString() == "Admin")
            {
                <th>Edit</th>
                <th>Delete</th>

            }


        </tr>
    </thead>
    <tbody>
     
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Id</td>
                    <td>@room.Capacity</td>
                    <td>@room.Price</td>
                    <td>@room.TotalRoom</td>
                    <td>@room.ToalAvailable</td>
                    <td>@room.Roomtype</td>
                    @if (Session["UserName"] != null && Session["UserName"].ToString() != "Admin")
                    {
                        <td>    @Html.ActionLink("BOOK", "New", "Booking", new { id = @room.Id }, new { @class = "btn btn-primary" })</td>

                    }


                    @if (Session["UserName"] != null && Session["UserName"].ToString() == "Admin")
                    {
                        
                        <td>    @Html.ActionLink("Edit", "Edit", "Room", new { id = @room.Id }, new { @class = "btn btn-warning", onclick = "return confirm('Are you sure you wish to Edit?');" })</td>
                        <td>    @Html.ActionLink("Delete", "Delete", "Room", new { id = @room.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete?');" })</td>

                    }








                </tr>
            }


</tbody>
</table>

